<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.customer_ui"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.customer_ui.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.example.customer_ui.RequestActivity"
            android:label="@string/title_map_message"
            android:parentActivityName="com.example.customer_ui.LoginActivity" > 
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.customer_ui.LoginActivity" />
        </activity>
        
        <activity
            android:name="com.example.customer_ui.MoreOption"
            android:label="@string/title_more_option"
            android:parentActivityName="com.example.customer_ui.RequestActivity" > 
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.customer_ui.RequestActivity" />
        </activity>
    </application>

</manifest>
