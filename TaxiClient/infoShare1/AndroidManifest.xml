<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.infoshare"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.infoshare.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.infoshare.Signup"
            android:label="@string/title_activity_signup" >
        </activity>
        <activity
            android:name="com.example.infoshare.OptionMenu"
            android:label="@string/title_activity_option_menu" >
        </activity>
        <activity
            android:name="com.example.infoshare.CourseList"
            android:label="@string/title_activity_course_list" >
        </activity>
        <activity
            android:name="com.example.infoshare.Test"
            android:label="@string/title_activity_test" >
        </activity>
    </application>

</manifest>
